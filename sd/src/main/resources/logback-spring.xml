<configuration>
    <appender name="CUSTOM_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/custom.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/custom.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC_CUSTOM_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CUSTOM_FILE" />
        <queueSize>5000</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <logger name="CUSTOM_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CUSTOM_FILE" />
    </logger>

    <root level="INFO">
        <appender-ref ref="ASYNC_CUSTOM_FILE"/>
    </root>
</configuration>
